<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Diffracta"
        x:Class="Diffracta.ChildWindow1"
        x:DataType="local:ChildWindow1"
        Width="400" Height="300" 
        Title="Child Window"
        WindowStartupLocation="CenterScreen"
        Background="#2d2d2d">
  
  <Grid Margin="12">
    <StackPanel Spacing="12">
      <TextBlock Text="Child Window" 
                 Foreground="White" 
                 FontSize="18" 
                 FontWeight="Bold"/>
      
      <TextBlock Text="Shared Data Example:" 
                 Foreground="White" 
                 FontSize="14"/>
      
      <TextBlock Text="{Binding SharedMessage}" 
                 Foreground="#cccccc" 
                 FontSize="12"
                 TextWrapping="Wrap"/>
      
      <TextBlock Text="{Binding TempoDisplay}" 
                 Foreground="#ff8c00" 
                 FontSize="16"
                 FontWeight="Bold"/>
      
      <Button Content="Close Window" 
              Click="CloseButton_Click"
              Background="#d3d3d3"
              Foreground="Black"
              Width="120"
              HorizontalAlignment="Left"/>
    </StackPanel>
  </Grid>
</Window>

