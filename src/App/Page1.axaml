<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Diffracta"
             x:Class="Diffracta.Page1"
             x:DataType="local:MainWindow">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Vertical" Spacing="8" Margin="8,4" Grid.Row="0">
            <!-- Tempo Clock Controls -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="TempoButton" 
                        Content="{Binding TempoButtonText}" 
                        Width="100" 
                        Background="{Binding TempoButtonBackground}"
                        Foreground="Black"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="4">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#e0e0e0"/>
                        </Style>
                    </Button.Styles>
                </Button>
                <Button x:Name="ResetButton" 
                        Content="Reset" 
                        Width="60" 
                        Background="#d3d3d3"
                        Foreground="Black"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="4"/>
                <Button x:Name="SplitVerticalButton" 
                        Content="Split Vertical" 
                        Width="100" 
                        Background="#d3d3d3"
                        Foreground="Black"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="4"
                        Click="OnSplitVerticalClick"/>
                <TextBlock x:Name="TempoDisplay" 
                           Text="{Binding Tempo.TimeDisplay}" 
                           Foreground="White" 
                           FontSize="14" 
                           VerticalAlignment="Center"
                           MinWidth="80"/>
            </StackPanel>

            <TextBlock Text="Add 4 textures, 1) black, 2) image, 3) shader, 4) video" Foreground="White" VerticalAlignment="Center"/>
            <TextBlock Text="Make a main display, that has these in layers that we switch and play opacity" Foreground="White" VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Selected Shader:" Foreground="White" VerticalAlignment="Center"/>
                <ComboBox x:Name="ShaderPicker" Width="200">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="White"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <Separator Height="1" Background="#555555" Margin="8,4"/>
        
        <ScrollViewer x:Name="MainScrollViewer" Grid.Row="1" Margin="8,0,8,8">
            <StackPanel Spacing="12">

                <Border Background="#1e1e1e" Padding="4">
                    <StackPanel Spacing="8">
                        <Button Width="80" Height="60" Background="DarkGray" BorderThickness="0" CornerRadius="4" VerticalAlignment="Center">
                            <TextBlock Text="Pad 1" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                        <Button Width="80" Height="60" Background="DarkGray" BorderThickness="0" CornerRadius="4" VerticalAlignment="Center">
                            <TextBlock Text="Pad 2" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                        <Button Width="80" Height="60" Background="DarkGray" BorderThickness="0" CornerRadius="4" VerticalAlignment="Center">
                            <TextBlock Text="Pad 3" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </Border>
                
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- This will be dynamically shown when split -->
        <Grid x:Name="SplitGrid" Grid.Row="2" Margin="8,0,8,8" IsVisible="False">
            <Border Background="Pink" BorderBrush="Black" BorderThickness="1" Padding="12" CornerRadius="0">
                <TextBlock x:Name="RandomTextBlock" 
                           Text="Random Text for Testing" 
                           Foreground="White" 
                           FontSize="16"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>



