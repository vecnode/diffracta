<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Diffracta"
             x:Class="Diffracta.Page1"
             x:DataType="local:MainWindow">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Vertical" Spacing="8" Margin="8,4" Grid.Row="0">
            <!-- Tempo Clock Controls -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="TempoButton" 
                        Content="{Binding TempoButtonText}" 
                        Width="100">
                    <!-- Click handler wired up in MainWindow.Page1_WireUp -->
                    <!-- Uses default Utils_Button style -->
                </Button>
                <Button x:Name="ResetButton" 
                        Content="Reset" 
                        Width="60"/>
                        <!-- Click handler wired up in MainWindow.Page1_WireUp -->
                <Button x:Name="SplitVerticalButton" 
                        Content="Split Vertical" 
                        Width="100"
                        Click="OnSplitVerticalClick"/>
                <TextBlock x:Name="TempoDisplay" 
                           Text="{Binding Tempo.TimeDisplay}" 
                           Foreground="White" 
                           FontSize="14" 
                           VerticalAlignment="Center"
                           MinWidth="80"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Media:" Foreground="White" VerticalAlignment="Center" FontSize="12"/>

                <local:Utils_ComboBox x:Name="ShaderPicker" Width="200"/>
                
 
                <TextBlock Text="Slot:" Foreground="White" VerticalAlignment="Center" FontSize="12"/>

                <local:Utils_ComboBox x:Name="SlotPicker" Width="100"/>
                
            </StackPanel>
        </StackPanel>

        <Separator Height="1" Background="#555555" Margin="8,4"/>
        
        <ScrollViewer x:Name="MainScrollViewer" Grid.Row="1" Margin="8,0,8,8">
            <StackPanel Spacing="12">

                <local:Utils_Launchpad x:Name="Launchpad"/>
                
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- This will be dynamically shown when split -->
        <Grid x:Name="SplitGrid" Grid.Row="2" Margin="8,0,8,8" IsVisible="False">
            <Border Background="Pink" BorderBrush="Black" BorderThickness="1" Padding="12" CornerRadius="0">
                <TextBlock x:Name="RandomTextBlock" 
                           Text="Random Text for Testing" 
                           Foreground="White" 
                           FontSize="16"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>



