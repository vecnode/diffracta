<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Diffracta"
             x:Class="Diffracta.ToolsPage">
    <ScrollViewer Margin="8">
        <StackPanel Spacing="12">
            <TextBlock Text="Tools" Foreground="White" FontSize="14"/>
            
            <StackPanel Spacing="8">
                <Button Content="Pad 1" Width="60" Height="60" Background="DarkGray" Foreground="White" BorderThickness="0" CornerRadius="4"/>
                <Button Content="Pad 2" Width="60" Height="60" Background="DarkGray" Foreground="White" BorderThickness="0" CornerRadius="4"/>
                <Button Content="Pad 3" Width="60" Height="60" Background="DarkGray" Foreground="White" BorderThickness="0" CornerRadius="4"/>
            </StackPanel>
            
            <!-- Directory Selection Section -->
            <StackPanel Spacing="8" Margin="0,16,0,0">
                <Button x:Name="BrowseButton" 
                        Content="Browse Directory" 
                        Width="150" 
                        Height="30"
                        Background="DarkGray"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="4"/>
                
                <ListBox x:Name="DirectoryListBox" 
                        Width="NaN" 
                        Height="200"
                        Background="DarkGray"
                        Foreground="White"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,8,0,0"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>

