<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Diffracta"
             xmlns:gfx="using:Diffracta.Graphics"
             x:Class="Diffracta.Page4">
    <ScrollViewer Margin="8">
        <StackPanel Spacing="12">
            <TextBlock Text="Help &amp; Documentation" Foreground="White" FontSize="14"/>
            
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Image Source="avares://Diffracta/Media/default/smpte_color_bars.png" Width="300" HorizontalAlignment="Left"/>
                <StackPanel Spacing="8">
                    <gfx:VideoSurface x:Name="HelpVideoSurface" Width="300" Height="170"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button x:Name="StartVideoButton" Content="Start" Width="100"/>
                        <!-- Button will use Utils_Button style automatically -->
                    </StackPanel>
                    <TextBlock x:Name="VideoInfoText" Foreground="#cccccc" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Help content will go here -->
        </StackPanel>
    </ScrollViewer>
</UserControl>

