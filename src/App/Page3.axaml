<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Diffracta"
             xmlns:timeline="clr-namespace:TimelineControl"
             x:Class="Diffracta.Page3">
    <ScrollViewer Margin="8">
        <StackPanel Spacing="12">
            
            <!-- Timeline Editor Section -->
            <StackPanel Spacing="0" Margin="0,0,0,0">
                <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Stretch">
                    <timeline:TimelineEditor x:Name="TimelineEditorControl"
                                             Width="700"
                                             Height="400"
                                             HorizontalAlignment="Left"
                                             BorderThickness="2"
                                             BorderBrush="Green"
                                             VerticalAlignment="Top"/>
                </Border>
            </StackPanel>
            
            
        </StackPanel>
    </ScrollViewer>
</UserControl>

